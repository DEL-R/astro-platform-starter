---
interface Props {
    title: string;
    description: string;
    tags?: string[];
    demoUrl?: string;
    codeUrl?: string;
}

const { title, description, tags = [], demoUrl, codeUrl } = Astro.props;
---

<article class="card-panel h-full">
    <div>
        <h3 class="mb-3 text-xl font-semibold">{title}</h3>
        <p class="leading-relaxed text-muted">{description}</p>
    </div>
    {tags.length > 0 && (
        <div class="badge-list">
            {tags.map((t) => (
                <span class="badge">{t}</span>
            ))}
        </div>
    )}
    <div class="flex flex-wrap gap-3">
        {demoUrl && (
            <a href={demoUrl} class="btn" rel="noopener noreferrer" target="_blank">
                Demo
            </a>
        )}
        {codeUrl && (
            <a href={codeUrl} class="btn" rel="noopener noreferrer" target="_blank">
                Code
            </a>
        )}
    </div>
</article>
